
{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  // FIX: Include all relevant files in the root directory and subdirectories
  "include": ["."],
  // FIX: Exclude files that are handled by other processes
  "exclude": ["node_modules", "dist", "server.ts", "tsconfig.node.json"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
