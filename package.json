{
  "name": "nexus-intimo",
  "version": "1.0.0",
  "description": "An application for couples and individuals to explore intimacy and connection.",
  "main": "dist/server.js",
  "type": "module",
  "scripts": {
    "build:frontend": "esbuild index.tsx --bundle --outfile=dist/bundle.js --minify --sourcemap --jsx=automatic",
    "copy-assets": "cp public/index.html dist/ && cp public/sw.js dist/",
    "build": "npm run build:frontend && npm run copy-assets && tsc",
    "start": "node dist/server.js",
    "dev": "concurrently \"npm:dev:backend\" \"npm:dev:frontend\"",
    "dev:backend": "nodemon server.ts",
    "dev:frontend": "esbuild index.tsx --bundle --outfile=public/bundle.js --watch --jsx=automatic --servedir=public"
  },
  "author": "World-Class Senior Frontend Engineer",
  "license": "UNLICENSED",
  "dependencies": {
    "@google/genai": "^1.7.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.24.1",
    "short-uuid": "^5.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.14.9",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "concurrently": "^8.2.2",
    "esbuild": "^0.21.5",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2"
  }
}